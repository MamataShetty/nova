{
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },{
        // Returns a permanent redirect to "/bar" for requests to both "/foo" and "/foo/**"
        "source": "/home",
        "destination": "/home.html",
        "type": 301
      }
    ]
  }
}
